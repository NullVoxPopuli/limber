{
  "name": "limber-monorepo",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:NullVoxPopuli/limber.git"
  },
  "author": "NullVoxPopuli",
  "scripts": {
    "build": "turbo build --filter=limber^... --filter=tutorial^...",
    "dev": "node ./dev/index.js",
    "lint": "turbo _:lint --output-logs errors-only",
    "lint:fix": "turbo _:lint:fix --output-logs errors-only",
    "prepare": "pnpm build",
    "start": "pnpm build && concurrently 'npm:start:tutorial' 'npm:start:repl' 'npm:start:styles' --names 'tutarial,repl,tailwind'",
    "start:repl": "pnpm --filter=limber start",
    "start:styles": "pnpm --filter=limber-styles start",
    "start:tutorial": "pnpm --filter=tutorial start"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@nullvoxpopuli/eslint-configs": "^3.2.2",
    "concurrently": "^8.2.2",
    "dev-tools": "workspace:*",
    "eslint": "^8.55.0",
    "pnpm-sync-dependencies-meta-injected": "^0.0.10",
    "prettier": "^3.2.5",
    "prettier-plugin-ember-template-tag": "^2.0.0",
    "release-plan": "^0.8.0",
    "turbo": "^1.12.2"
  },
  "packageManager": "pnpm@8.15.3",
  "engines": {
    "node": ">= 16"
  },
  "volta": {
    "node": "20.11.1",
    "pnpm": "8.15.3"
  },
  "pnpm": {
    "overrides": {
      "@ef4/lerna-changelog": "github:embroider-build/github-changelog#3ad92f5",
      "@nullvoxpopuli/eslint-configs": "^3.2.2",
      "@embroider/addon-shim": "1.8.8-unstable.f30e685",
      "ember-element-helper": "^0.8.5",
      "ember-auto-import": "^2.7.0",
      "ember-source": ">= 5.5.0",
      "webpack": "5.90.3",
      "@embroider/addon-dev": "4.2.2-unstable.f30e685",
      "@embroider/babel-loader-9": "3.1.2-unstable.f30e685",
      "@embroider/broccoli-side-watch": "0.0.2-unstable.f30e685",
      "@embroider/core": "3.4.6-unstable.f30e685",
      "@embroider/compat": "3.4.6-unstable.f30e685",
      "@embroider/macros": "1.14.1-unstable.f30e685",
      "@embroider/hbs-loader": "3.0.4-unstable.f30e685",
      "@embroider/reverse-exports": "0.1.1-unstable.f30e685",
      "@embroider/router": "2.1.7-unstable.f30e685",
      "@embroider/shared-internals": "2.5.3-unstable.f30e685",
      "@embroider/test-setup": "3.0.4-unstable.f30e685",
      "@embroider/util": "1.12.2-unstable.f30e685",
      "@embroider/vite": "0.2.1-unstable.f30e685",
      "@embroider/webpack": "3.2.3-unstable.f30e685"
    },
    "allowedDeprecatedVersions": {
      "source-map-url": "^0.3.0",
      "core-js": "^2.0.0"
    },
    "peerDependencyRules": {
      "allowAny": [
        "ember-modifier",
        "typescript",
        "ember-source"
      ],
      "ignoreMissing": [
        "webpack",
        "rollup",
        "rsvp"
      ]
    }
  }
}
