{
  "name": "limber-monorepo",
  "private": true,
  "author": "NullVoxPopuli",
  "scripts": {
    "dev": "node ./dev/index.js",
    "prepare": "pnpm build",
    "release": "changeset publish",
    "build": "turbo build --filter=limber^... --filter=tutorial^...",
    "lint:fix": "pnpm --filter='*' lint:fix",
    "lint": "turbo lint",
    "start": "turbo start --filter=limber",
    "start:tutorial": "turbo start --filter=tutorial"
  },
  "engines": {
    "node": ">= 16"
  },
  "volta": {
    "node": "18.15.0",
    "yarn": "1.22.19",
    "npm": "9.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0",
    "@nullvoxpopuli/eslint-configs": "^3.1.3",
    "concurrently": "^7.6.0",
    "eslint": "^8.35.0",
    "prettier": "^2.8.4",
    "turbo": "^1.8.3"
  },
  "packageManager": "pnpm@7.16.1",
  "pnpm": {
    "overrides": {
      "@glimmer/component": "^1.1.2",
      "@glimmer/tracking": "^1.1.2",
      "ember-async-data": "^1.0.0",
      "ember-auto-import": "^2.6.0",
      "ember-modifier": "^4.1.0",
      "ember-source": "^4.11.0",
      "@types/eslint": "^8.0.0",
      "@embroider/addon-dev": "3.0.0-unstable.00ec2e7",
      "@embroider/addon-shim": "1.8.4-unstable.00ec2e7",
      "@embroider/core": "2.1.1-unstable.00ec2e7",
      "@embroider/compat": "2.1.1-unstable.00ec2e7",
      "@embroider/macros": "1.10.0-unstable.00ec2e7",
      "@embroider/hbs-loader": "2.0.0-unstable.00ec2e7",
      "@embroider/router": "2.0.0-unstable.00ec2e7",
      "@embroider/shared-internals": "2.0.0-unstable.00ec2e7",
      "@embroider/test-setup": "2.1.1-unstable.00ec2e7",
      "@embroider/util": "1.10.0-unstable.00ec2e7",
      "@embroider/webpack": "2.1.1-unstable.00ec2e7"
    },
    "allowedDeprecatedVersions": {
      "source-map-url": "^0.3.0",
      "core-js": "^2.0.0"
    },
    "peerDependencyRules": {
      "allowAny": [
        "ember-modifier"
      ],
      "ignoreMissing": [
        "webpack",
        "rollup"
      ]
    },
    "notes": {},
    "patchedDependencies": {
      "ember-on-resize-modifier@1.1.0": "patches/ember-on-resize-modifier@1.1.0.patch"
    }
  }
}
