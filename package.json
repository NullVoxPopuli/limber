{
  "name": "limber-monorepo",
  "private": true,
  "author": "NullVoxPopuli",
  "workspaces": [
    "frontend",
    "packages/*",
    "tests"
  ],
  "scripts": {
    "predeploy": "yarn build && yarn workspace limber build",
    "build": "yarn turbo run build --scope='@nullvoxpopuli/*'",
    "lint:fix": "yarn turbo run lint:fix",
    "start": "yarn turbo run start --scope='limber' --include-dependencies"
  },
  "volta": {
    "node": "16.14.0",
    "yarn": "1.22.17",
    "npm": "8.5.3"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "turbo": "^1.1.5"
  },
  "resolutions": {
    "ember-auto-import": "^2.4.0",
    "@ember/render-modifiers": "2.0.4",
    "@embroider/addon-shim": "1.3.0",
    "@embroider/core": "1.3.0",
    "@embroider/util": "1.3.0",
    "@embroider/macros": "1.3.0",
    "xstate": "4.30.5"
  },
  "packageManager": "yarn@1.22.17"
}
