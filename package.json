{
  "name": "limber-monorepo",
  "private": true,
  "author": "NullVoxPopuli",
  "workspaces": [
    "frontend",
    "packages/*",
    "tests"
  ],
  "resolutions": {
    "tracked-built-ins": "github:NullVoxPopuli/tracked-built-ins#tracked-storage",
    "tracked-maps-and-sets": "3.0.2"
  },
  "scripts": {
    "predeploy": "pnpm run build && pnpm run build --filter=limber",
    "build": "npm-run-all --aggregate-output --parallel 'build:*'",
    "build:horizon": "pnpm run build --filter @nullvoxpopuli/horizon-theme",
    "build:monaco": "pnpm run build --filter @nullvoxpopuli/limber-codemirror",
    "build:codemirror": "pnpm run build --filter @nullvoxpopuli/limber-monaco",
    "lint:fix": "npm-run-all --aggregate-output --parallel 'lint:*:fix'",
    "lint:horizon:fix": "pnpm run lint:fix --filter @nullvoxpopuli/horizon-theme",
    "lint:monaco:fix": "pnpm run lint:fix --filter @nullvoxpopuli/limber-codemirror",
    "lint:codemirror:fix": "pnpm run lint:fix --filter @nullvoxpopuli/limber-monaco",
    "lint:transpilation:fix": "pnpm run lint:fix --filter @nullvoxpopuli/limber-transpilation",
    "lint:frontend:fix": "pnpm run lint:fix --filter limber",
    "start": "pnpm run start --filter limber"
  },
  "volta": {
    "node": "16.13.0",
    "yarn": "1.22.17",
    "npm": "8.1.3"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
