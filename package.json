{
  "name": "limber-monorepo",
  "private": true,
  "author": "NullVoxPopuli",
  "scripts": {
    "dev": "node ./dev/index.js",
    "prepare": "pnpm build",
    "release": "changeset publish",
    "build": "turbo build --filter=limber^... --filter=tutorial^... --output-logs errors-only",
    "lint:fix": "turbo _:lint:fix --output-logs errors-only",
    "lint": "turbo _:lint --output-logs errors-only",
    "start": "pnpm build && concurrently 'npm:start:*' --prefix-colors cyan,white,yellow,blue --restart-tries -1",
    "start:tutorial": "pnpm --filter=tutorial start --port 4200",
    "start:repl": "pnpm --filter=limber start --port 4201",
    "start:limber-ui": "pnpm --filter=limber-ui start",
    "start:styles": "pnpm --filter=limber-styles start"
  },
  "engines": {
    "node": ">= 16"
  },
  "volta": {
    "node": "18.16.0",
    "pnpm": "8.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@nullvoxpopuli/eslint-configs": "^3.1.3",
    "concurrently": "^8.0.1",
    "dev-tools": "workspace:*",
    "eslint": "^8.39.0",
    "prettier": "^2.8.8",
    "turbo": "^1.9.3"
  },
  "packageManager": "pnpm@8.3.1",
  "pnpm": {
    "overrides": {
      "@nullvoxpopuli/eslint-configs": "^3.1.3",
      "@glimmer/component": "^1.1.2",
      "@glimmer/tracking": "^1.1.2",
      "ember-async-data": "^1.0.0",
      "ember-auto-import": "^2.6.3",
      "ember-modifier": "^4.1.0",
      "@types/eslint": "^8.0.0"
    },
    "allowedDeprecatedVersions": {
      "source-map-url": "^0.3.0",
      "core-js": "^2.0.0"
    },
    "peerDependencyRules": {
      "allowAny": [
        "ember-modifier",
        "typescript",
        "ember-source"
      ],
      "ignoreMissing": [
        "webpack",
        "rollup"
      ]
    },
    "notes": {}
  }
}
