{
  "name": "limber-monorepo",
  "private": true,
  "author": "NullVoxPopuli",
  "scripts": {
    "dev": "node ./dev/index.js",
    "prepare": "pnpm build",
    "release": "changeset publish",
    "build": "turbo build --filter=limber^... --filter=tutorial^... --output-logs errors-only",
    "lint:fix": "turbo _:lint:fix --output-logs errors-only",
    "lint": "turbo _:lint --output-logs errors-only",
    "start": "pnpm build && concurrently 'npm:start:*' --prefix-colors cyan,white,yellow,blue --restart-tries -1",
    "start:tutorial": "pnpm --filter=tutorial start",
    "start:repl": "pnpm --filter=limber start",
    "start:limber-ui": "pnpm --filter=limber-ui start",
    "start:styles": "pnpm --filter=limber-styles start"
  },
  "engines": {
    "node": ">= 16"
  },
  "volta": {
    "node": "20.11.0",
    "pnpm": "8.15.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.26.2",
    "@nullvoxpopuli/eslint-configs": "^3.2.2",
    "concurrently": "^8.2.2",
    "dev-tools": "workspace:*",
    "eslint": "^8.55.0",
    "pnpm-sync-dependencies-meta-injected": "^0.0.10",
    "prettier": "^3.2.5",
    "prettier-plugin-ember-template-tag": "^2.0.0",
    "turbo": "^1.12.2"
  },
  "packageManager": "pnpm@8.15.1",
  "pnpm": {
    "overrides": {
      "@nullvoxpopuli/eslint-configs": "^3.2.2",
      "@embroider/addon-shim": "1.8.7",
      "ember-element-helper": "^0.8.5",
      "ember-auto-import": "^2.7.0"
    },
    "allowedDeprecatedVersions": {
      "source-map-url": "^0.3.0",
      "core-js": "^2.0.0"
    },
    "packageExtensions": {
      "@glint/core": {
        "dependencies": {
          "@glimmer/syntax": "0.84.3"
        }
      },
      "@glimmer/syntax": {
        "dependencies": {
          "@glimmer/env": "^0.1.7"
        }
      },
      "@codemirror/lang-liquid": {
        "dependencies": {
          "@codemirror/state": "^6.0.0",
          "@codemirror/view": "^6.0.0"
        }
      },
      "@codemirror/lang-python": {
        "dependencies": {
          "@lezer/common": "^1.2.1"
        }
      },
      "ember-ast-helpers@0.4.0": {
        "dependencies": {
          "@glimmer/syntax": "^0.27.0",
          "@glimmer/compiler": "^0.27.0"
        }
      },
      "ember-element-helper": {
        "dependencies": {
          "@embroider/addon-shim": "1.8.7"
        }
      },
      "@fortawesome/ember-fontawesome": {
        "dependencies": {
          "@fortawesome/free-solid-svg-icons": "^6.5.1",
          "@fortawesome/free-regular-svg-icons": "^6.5.1",
          "@fortawesome/free-brands-svg-icons": "^6.5.1"
        }
      },
      "ember-concurrency": {
        "dependencies": {
          "@babel/helper-module-imports": "^7.22.15"
        }
      }
    },
    "peerDependencyRules": {
      "allowAny": [
        "ember-modifier",
        "typescript",
        "ember-source"
      ],
      "ignoreMissing": [
        "webpack",
        "rollup",
        "rsvp"
      ]
    },
    "notes": {}
  }
}
