{
  "name": "limber-monorepo",
  "private": true,
  "author": "NullVoxPopuli",
  "workspaces": [
    "frontend",
    "packages/*",
    "tests"
  ],
  "scripts": {
    "daemon": ". ./.env.turbo && (pm2 start ./launch-daemon.sh 2> /dev/null || true)",
    "daemon:status": "pm2 ls",
    "daemon:stop": "pm2 ./launch-daemon.sh",
    "reset": "git clean -Xfd && pnpm install",
    "predeploy": "turbo run build --filter=limber",
    "build": "pnpm daemon; set -a; . ./.env.turbo && turbo run build --filter=limber^...",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "start": "pnpm daemon; . ./.env.turbo && turbo run start --filter=limber"
  },
  "volta": {
    "node": "16.14.1",
    "yarn": "1.22.17",
    "npm": "8.5.4"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "pm2": "^5.2.0",
    "turbo": "^1.2.9",
    "turborepo-remote-cache": "^1.1.1"
  },
  "resolutions": {
    "ember-auto-import": "^2.4.0",
    "@ember/render-modifiers": "2.0.4",
    "@embroider/addon-shim": "1.6.0",
    "@embroider/core": "1.6.0",
    "@embroider/util": "1.6.0",
    "@embroider/macros": "1.6.0",
    "@types/eslint": "^7.0.0",
    "xstate": "4.30.6"
  },
  "packageManager": "pnpm@6.32.4"
}
