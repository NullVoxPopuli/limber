{
  "name": "@glimdown/lezer-glimmer-expression",
  "version": "2.0.0",
  "author": "NullVoxPopuli",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "default": "./dist/index.es.js"
    }
