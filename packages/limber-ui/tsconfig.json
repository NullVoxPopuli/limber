{
  "extends": "@ember/library-tsconfig",
  "include": ["src/**/*", "unpublished-development-types/**/*"],
  "exclude": ["declarations", "dist"],
  "glint": {
    "environment": ["ember-loose", "ember-template-imports"]
  },
  "compilerOptions": {
    "allowJs": true,
    "declarationDir": "declarations",
    "rootDir": "./src",
    "types": ["ember-source/types"]
  }
}
