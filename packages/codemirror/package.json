{
  "name": "@nullvoxpopuli/limber-codemirror",
  "version": "0.0.0",
  "description": "custom build of codemirror for use in Limber",
  "type": "module",
  "exports": {
    "./broccoli-funnel": {
      "require": "./broccoli-funnel.cjs"
    }
  },
  "author": "NullVoxPopuli",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "node build.cjs",
    "dev": "pnpm build --watch",
    "lint:types": "tsc --noEmit",
    "lint:prettier:fix": "prettier -w .",
    "lint:prettier": "prettier -c .",
    "lint:fix": "concurrently 'npm:lint:*:fix' --names 'fix:'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix"
  },
  "browser": {
    "path": "path-browserify"
  },
  "dependencies": {
    "@codemirror/autocomplete": "6.4.2",
    "@codemirror/commands": "6.2.2",
    "@codemirror/lang-html": "^6.4.3",
    "@codemirror/lang-javascript": "6.1.4",
    "@codemirror/lang-markdown": "6.1.0",
    "@codemirror/language": "^6.6.0",
    "@codemirror/language-data": "^6.2.0",
    "@codemirror/lint": "^6.2.0",
    "@codemirror/search": "6.3.0",
    "@codemirror/state": "6.2.0",
    "@codemirror/view": "6.9.3",
    "@lezer/highlight": "^1.1.4",
    "@lezer/html": "^1.3.4",
    "@lezer/markdown": "^1.0.2",
    "@nullvoxpopuli/horizon-theme": "*",
    "assert": "^2.0.0",
    "broccoli-funnel": "^3.0.8",
    "codemirror": "^6.0.1",
    "codemirror-languageserver": "^1.11.0",
    "eslint4b": "^7.32.0",
    "path-browserify": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@nullvoxpopuli/eslint-configs": "^3.1.3",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "concurrently": "^8.0.1",
    "esbuild": "0.17.15",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^8.34.0",
    "prettier": "^2.8.7",
    "recursive-copy": "^2.0.14",
    "typescript": "^5.0.3"
  },
  "engines": {
    "node": ">= v16"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
