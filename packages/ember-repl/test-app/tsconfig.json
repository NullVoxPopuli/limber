{
  "extends": "@tsconfig/ember/tsconfig.json",
  "glint": {
    "environment": ["ember-loose", "ember-template-imports"]
  },
  "compilerOptions": {
    "skipLibCheck": true,
    "types": ["ember-source/types", "vite/client", "@embroider/core/virtual"],
    "paths": {
      "ember-repl-test-app/tests/*": ["./tests/*"],
      "ember-repl-test-app/*": ["./app/*"],
    }
  },
  "include": ["./app/**/*", "./tests/**/*"]
}
