{
  "name": "@nullvoxpopuli/limber-codemirror",
  "version": "0.0.0",
  "description": "custom build of codemirror for use in Limber",
  "type": "module",
  "exports": {
    "./broccoli-funnel": {
      "require": "./broccoli-funnel.cjs"
    }
  },
  "author": "NullVoxPopuli",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "node build.cjs",
    "dev": "pnpm build --watch",
    "lint:types": "tsc --noEmit",
    "lint:fix": "pnpm -w exec lint fix",
    "lint": "pnpm -w exec lint",
    "lint:js": "pnpm -w exec lint js",
    "lint:js:fix": "pnpm -w exec lint js:fix",
    "lint:prettier:fix": "pnpm -w exec lint prettier:fix",
    "lint:prettier": "pnpm -w exec lint prettier"
  },
  "browser": {
    "path": "path-browserify"
  },
  "dependencies": {
    "@codemirror/autocomplete": "6.9.0",
    "@codemirror/commands": "6.2.4",
    "@codemirror/lang-html": "^6.4.5",
    "@codemirror/lang-javascript": "6.1.9",
    "@codemirror/lang-markdown": "6.2.0",
    "@codemirror/language": "^6.8.0",
    "@codemirror/language-data": "^6.3.1",
    "@codemirror/lint": "^6.4.0",
    "@codemirror/search": "6.5.1",
    "@codemirror/state": "6.2.1",
    "@codemirror/view": "6.16.0",
    "@lezer/common": "^1.0.3",
    "@lezer/highlight": "^1.1.6",
    "@lezer/html": "^1.3.6",
    "@lezer/markdown": "^1.1.0",
    "@nullvoxpopuli/horizon-theme": "*",
    "assert": "^2.0.0",
    "broccoli-funnel": "^3.0.8",
    "codemirror": "^6.0.1",
    "codemirror-lang-glimdown": "workspace:*",
    "codemirror-lang-glimmer": "workspace:*",
    "codemirror-lang-glimmer-js": "workspace:*",
    "codemirror-languageserver": "^1.11.0",
    "eslint4b": "^7.32.0",
    "path-browserify": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@nullvoxpopuli/eslint-configs": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "concurrently": "^8.2.0",
    "esbuild": "0.19.0",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^8.46.0",
    "prettier": "^2.8.8",
    "prettier-plugin-ember-template-tag": "^1.0.2",
    "recursive-copy": "^2.0.14",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">= v16",
    "npm": "use pnpm",
    "yarn": "use pnpm"
  },
  "volta": {
    "extends": "../../../package.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NullVoxPopuli/limber.git",
    "directory": "packages/app-support/codemirror"
  }
}
