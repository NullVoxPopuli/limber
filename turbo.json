{
  "baseBranch": "origin/main",
  "pipeline": {
    /////////////////////////////////////////////////
    /////////////////////////////////////////////////
    //
    //         Local Dev
    //
    /////////////////////////////////////////////////
    /////////////////////////////////////////////////
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": false
    },

    /////////////////////////////////////////////////
    /////////////////////////////////////////////////
    //
    //         C.I. / C.D.
    //
    /////////////////////////////////////////////////
    /////////////////////////////////////////////////
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": [],
      "dependsOn": ["^build"]
    },
    // Apps will have test:ember and test:browserstack
    // They are separate so that they can cache independently
    // and provide more variability than just "test"
    "test:ember": {
      "env": ["CI_BROWSER"],
      "dependsOn": ["^build"]
    },
    "test:browserstack": {
      "dependsOn": ["^build"]
    },
    "test:scenarios": {
      "dependsOn": ["^build"]
    },

    /////////////////////////////////////////////////
    /////////////////////////////////////////////////
    //
    //         Quality Checks
    //
    /////////////////////////////////////////////////
    /////////////////////////////////////////////////
    "lint": {
      "outputs": [],
      "dependsOn": ["lint:js", "lint:hbs", "lint:prettier", "lint:types"]
    },
    "lint:js": {
      "outputs": []
    },
    "lint:hbs": {
      "outputs": []
    },
    "lint:prettier": {
      "outputs": []
    },
    "lint:types": {
      "outputs": [],
      "dependsOn": ["^build"]
    }
  }
}
